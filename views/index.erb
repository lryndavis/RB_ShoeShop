<div class="container">
  <div class="jumbotron">
<h1>SHOE FINDER</h1>

<h3>Search local shoe stores for your favorite brands</h3>
<a href="/" class="link1">SHOPS</a><a href="/" class="link2">BRANDS</a>

</div>
<ul>
  <% @stores.each do |store| %>
  <li><a href="/stores/<%= store.id %>"><%= store.store_name %></a></li>
   <% end %>
</ul>

  <form action="/stores" method="post" class="form-inline">
    <div class="form-group">
      <label>Add a Store:</label>
      <input type="text" class="form-control" id="store_name" name="store_name" placeholder="Your Store">
    </div>
    <button type="submit" class="btn btn-default">Add</button>
  </form>

<div class="container">

<div class="page-header">
<h1>SHOE FINDER</h1>
<h4>Search local shoe stores for your favorite brands</h4>
</div>
<div class="linkbar">
  <a href="/" class="linkheader1">BRANDS</a>
  <a href="/" class="linkheader2">SHOPS</a>
</div>

<ul>
  <% @stores.each do |store| %>
  <li><a href="/stores/<%= store.id %>"><%= store.store_name %></a></li>
   <% end %>
</ul>

  <form action="/stores" method="post" class="form-inline">
    <div class="form-group">
      <label>Add a Store:</label>
      <input type="text" class="form-control" id="store_name" name="store_name" placeholder="Your Store">
    </div>
    <button type="submit" class="btn btn-default">Add</button>
  </form>

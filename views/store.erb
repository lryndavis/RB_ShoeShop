<div class="container">
 <h1><%= @store.store_name %></h1>
 <h3><%= @store.store_name %> carries the following brands:</h3>


 <ul>
  <% @store.brands.each do |brand| %>
   <li><%= brand.brand_name %></li>
  <% end %>
 </ul>

 <div class="container-fluid">
   <form class="form-inline" action="/stores/<%= @store.id %>/brands" method="post">
     <div class="form-group">
       <label>Add a brand:</label>
       <input type="text" class="form-control" id="brand_name" name="brand_name">
     </div>
     <button type="submit" class="btn btn-default">Add</button>
   </form>

 </div>

<br>
<form class="form-inline" form action="/stores/<%= @store.id() %>/edit" method="post">
  <input type="hidden" value="patch" name="_method">
     <label>Update Store Name:</label>
  <input type="text" class="form-control" id="store_name" name="store_name">

  <button type="submit" class="btn btn-default">Update</button>
</form>
<br>
<form class="class-inline" form action="/stores/<%= @store.id() %>/delete" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" class="btn btn-danger">Delete this Store</button>
</form>
<br>
<a href="/">HOME</a>
</div>

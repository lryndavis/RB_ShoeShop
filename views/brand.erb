<div class="container">
  <div class="page-header">
    <h1>SHOE FINDER</h1>
    <h4>Search local shoe stores for your favorite brands</h4>
  </div>

  <div class="container1">
    <h3><%= @brand.brand_name %> is sold at the following stores:</h3>
      <ul>
      <% @brand.stores.each do |store| %>
        <li><a href="/stores/<%= store.id %>"><%= store.store_name %></a></li>
      <% end %>
    </ul>

    <form class="form-inline" form action="/brands/<%= @brand.id %>/edit" method="post">
      <input type="hidden" name="_method" value="patch">
      <input type="text" class="form-control" id="brand_name" name="brand_name" placeholder="New Brand Name">
      <button type="submit" class="btn btn-default">Update</button>
    </form>

    <br>
    <form class="class-inline" form action="/brands/<%= @brand.id() %>/delete" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-danger">Delete this Brand</button>
    </form>
  </div>
</div>

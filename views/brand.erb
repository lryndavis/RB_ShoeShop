<div class="container">
  <div class="page-header">
    <a href="/"><h1>SHOE FINDER</h1></a>
    <h4>Search local shoe stores for your favorite brands</h4>
  </div>

  <div class="wrapper">
    <h2><%= @brand.brand_name %></h2>
    <h3>Stockists</h3>
      <% @brand.stores.each do |store| %>
        <p><a href="/stores/<%= store.id %>"><%= store.store_name %></a></p>
      <% end %>
    <div class="btnbar">
      <h3>Update Brand Info</h3>
    <form class="form-inline" form action="/brands/<%= @brand.id %>/edit" method="post">
      <input type="hidden" name="_method" value="patch">
      <input type="text" class="form-control" id="brand_name" name="brand_name" placeholder="New Brand Name">
      <button type="submit" class="btn btn-default">UPDATE</button>
    </form>

    <form class="class-inline" form action="/brands/<%= @brand.id() %>/delete" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-default btn-block" id="button1">DELETE THIS BRAND</button>
    </form>
  </div>
  </div>
</div>

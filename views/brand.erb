<div class="container">
  <div class="linkbar">
    <h1><%= @brand.brand_name %></h1>
  </div>

  <h3><%= @brand.brand_name %> is sold at the following stores:</h3>

  <ul>
    <% @brand.stores.each do |store| %>
      <li><a href="/stores/<%= store.id %>"><%= store.store_name %></a></li>
    <% end %>
  </ul>

  <form class="class-inline" form action="/brands/<%= @brand.id %>/edit" method="post">
    <input type="hidden" name="_method" value="patch">
    <label>Update Brand Name</label>
    <input type="text" class="form-control" id="brand_name" name="brand_name">
    <button type="submit" class="btn btn-default">Update</button>
  </form>
<br>
  <form class="class-inline" form action="/brands/<%= @brand.id() %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit" class="btn btn-danger">Delete this Brand</button>
  </form>

  <a href="/">HOME</a>
</div>

<div class="container">
  <div class="page-header">
    <a href="/"><h1>SHOE FINDER</h1></a>
    <h4>Search local shoe stores for your favorite brands</h4>
  </div>

  <div class="wrapper">
    <h2>CURRENT SHOPS</h2>
      <% @stores.each do |store| %>
        <p><a href="/stores/<%= store.id %>"><%= store.store_name %></a></p>
      <% end %>

    <div class="btnbar">
      <h3>Add a Shop</h3>
       <form action="/stores" method="post" class="">
          <input type="text" class="form-control" id="store_name" name="store_name" placeholder="Your Store">
          <button type="submit" class="btn btn-default btn-block" id="brandbtn">ADD</button>
        </form>
      </div>
    </div>
  </div>
